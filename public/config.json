{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Template",
          "description": "A Template for a custom Journey Builder activity",
          "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
           "inArguments":[
				{
                    "emailAddress": "{{Contact.Attribute.CustomActivity.EmailAddress}}"
                },
                {
                    "phoneNumber": "{{Contact.Attribute.CustomActivity.PhoneNumber}}"
                }									
			],
          "outArguments": [
            {
                "foundSignupDate": ""
            }
          ],
          "url": "https://https://jb-activity-template.herokuapp.com/journeybuilder/execute",
           "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
      "applicationExtensionKey": "a5f526a0-1bd3-49b8-b86f-50fbcb34bdfe",
      "save": {
        "url": "https://https://jb-activity-template.herokuapp.com/journeybuilder/save",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "https://https://jb-activity-template.herokuapp.com/journeybuilder/publish",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "https://https://jb-activity-template.herokuapp.com/journeybuilder/stop",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://https://jb-activity-template.herokuapp.com/journeybuilder/validate",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
        { "label": "Configure Activity", "key": "step1" },
        { "label": "Step 1", "key": "step1" },
        { "label": "Step 2", "key": "step2" },
        { "label": "Step 3", "key": "step3" },
        { "label": "Step 4", "key": "step4", "active": false }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        },
        "runningModal": {
          "url": "runningModal.html"
        },
        "runningHover": {
          "url": "runningHover.html"
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                  {
                      "phoneNumber": {
                          "dataType": "Phone",
                          "isNullable": false,
                          "direction": "in"   
                      }
                  },
                  {
                      "emailAddress": {
                          "dataType": "Email",
                          "isNullable": false,
                          "direction": "in"
                      }
                  }
                ],
                "outArguments": [
                  {
                    "foundSignupDate": {
                        "dataType": "Date",
                        "direction": "out",
                        "access": "visible"
                    }
                  }
                ]
            }
        }
    }
}